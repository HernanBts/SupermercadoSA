@model SupermercadoSA.ModelViews.InventoryView

@{
    ViewBag.Title = "NewInventory";
}

<h2>NewInventory</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Bromatologist.BromatologistID, "CharacteristicID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("BromatologistID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Bromatologist.BromatologistID, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Batch.BatchID, "BatchID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("BatchID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Batch.BatchID, "", new { @class = "text-danger" })
            <br /><br />
            @Html.ActionLink("Verificar", "ControlBatch", new { MRID = Model.Batch.MRID }, new { @class = "btn btn-primary" })

        </div>

    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
</div>
}
