    <nav class="w3-sidebar w3-small w3-hide-small w3-center w3-top" style="color:whitesmoke">

        <a href="@Url.Action("Index", "Home")" id="CeNoVi" title="Inicio - SuperSA">
            <img src="@Url.Content("~/Images/Sa.png")" style="width:80%" class="img-circle">
            @*<img src="@Url.Content("~/Images/cenovi.png")" style="width:100%">*@
        </a>

        <a href="@Url.Action("Index", "Products")" class="w3-bar-item w3-button w3-padding-large w3-hover-opacity">
            @*<img src="~/Images/Calendario.png" style="width:100%" class="fa fa-user w3-xxlarge">*@
            <i class="fas fa-rocket fa-3x"></i>
            <p>Productos</p>
        </a>
        <a href="@Url.Action("Index", "Inventories")" " class="w3-bar-item w3-button w3-padding-large w3-hover-opacity">
            @*<img src="~/Images/HerryApps.png" style="width:100%" class="fa fa-user w3-xxlarge">*@
            <i class="fas fa-pen fa-3x"></i>
            <p>Inventarios</p>
        </a>
        <a href="@Url.Action("Index", "Batches")" class="w3-bar-item w3-button w3-padding-large w3-hover-opacity">
            @*<img src="~/Images/voluntariado.png" style="width:100%" class="fa fa-user w3-xxlarge">*@
            <i class="fas fa-book fa-3x"></i>
            <p>Reportes</p>
        </a>
        <a href="@Url.Action("Contact", "Home")" class="w3-bar-item w3-button w3-padding-large w3-hover-opacity">
            @*<img src="~/Images/contactanos.png" style="width:100%" class="fa fa-user w3-xxlarge">*@
            <i class="fas fa-mail-bulk fa-3x"></i>
            <p>Contacto</p>
        </a>

        <a href="@Url.Action("About", "Home")" class="w3-bar-item w3-button w3-padding-large w3-hover-opacity">
            @*<img src="~/Images/SobreNosotros.png" style="width:100%" class="fa fa-user w3-xxlarge">*@
            <i class="fas fa-users fa-3x"></i>
            <p>Nosotros</p>
        </a>
    </nav>

    <div class="w3-top w3-hide-large w3-hide-medium" id="myNavbar">
        <div class="w3-bar w3-black w3-opacity w3-hover-opacity-off w3-center w3-small">
            <a href="@Url.Action("Index", "Home")" id="CeNoVi" title="Inicio - CeNoVi" class="w3-bar-item w3-button" style="width:16% !important">
                <i class="fas fa-home fa-2x"></i>
            </a>
            <a href="@Url.Action("Index", "Products")" class="w3-bar-item w3-button" style="width:16% !important">
                <i class="fas fa-rocket fa-2x"></i>
            </a>
            <a href="@Url.Action("Index", "Files")" class="w3-bar-item w3-button" style="width:16% !important">
                <i class="fas fa-pen fa-2x"></i>
            </a>
            <a href="@Url.Action("Index", "Batches")" class="w3-bar-item w3-button" style="width:16% !important">
                <i class="fas fa-book fa-2x"></i>
            </a>
            <a href="@Url.Action("Contact", "Home")" class="w3-bar-item w3-button" style="width:16% !important">
                <i class="fas fa-users fa-2x"></i>
            </a>
            <a href="@Url.Action("About", "Home")" class="w3-bar-item w3-button" style="width:16% !important">
                <i class="fas fa-users fa-2x"></i>
            </a>
        </div>
    </div>

    <div class="w3-padding-large" id="main">
        <div>
            @RenderBody()
        </div>


        <hr />

        <footer class="w3-padding-large">
            <div class="w3-center">

                <div class="w3-quarter w3-section">
                    @Html.Partial("_LoginPartial")
                </div>

                <div class="w3-quarter w3-section">

                </div>

                <div class="w3-quarter w3-section">
                </div>

                <div class="w3-quarter w3-section bottom-right">
                    <p>&copy; @DateTime.Now.Year - Supermercado SA</p>
                </div>

            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>
